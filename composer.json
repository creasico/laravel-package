{
    "name": "creasi/laravel-package",
    "description": "Laravel Package Template",
    "keywords": ["laravel", "package", "template"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Creasi.co",
            "email": "hello@creasi.co"
        }
    ],
    "support": {
        "source": "https://github.com/creasico/laravel-package"
    },
    "scripts": {
        "lint": [
            "vendor/bin/phpcs --standard=PSR12 -n -p src"
        ],
        "lint:fix": [
          "php-cs-fixer fix --config .php-cs-fixer.php --allow-risky yes"
        ],
        "test": [
            "vendor/bin/phpunit --colors=always"
        ]
    },
    "autoload": {
        "psr-4": {
            "Creasi\\Laravel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Creasi\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^8.0|^9.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^7.5",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Creasi\\Laravel\\PackageServiceProvider"
            ],
            "aliases": {
                "Package": "Creasi\\Laravel\\Facades\\Package"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
